<div class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
   <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "SportRelation-logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse w-100" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", "/", class: "nav-link" %><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Renter
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if policy(Sportif).create? %>
          <a class="dropdown-item" ><%= link_to "Create your sportman", new_sportif_path, class: "nav-link" %></a>
          <% end %>
          <a class="dropdown-item" ><%= link_to "See my reservations", reservations_path, class: "nav-link" %></a>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Owner
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item"><%= link_to "My sportmen", owner_sportifs_path, class: "nav-link" %></a>
          <a class="dropdown-item"><%= link_to "Validate my reservations", owner_reservations_path, class: "nav-link" %>
          <a class="dropdown-item"><%= link_to "Create your sportman", new_sportif_path, class: "nav-link" %></a>
        </div>
      </li>
      <li class="nav-item dropdown">
          <%= cl_image_tag current_user.logo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>


  </div>
</div>

<div class="form">

  <div class="col-sm-6" id="formulaire">
    <h1>Create your reservation</h1>

    <%= simple_form_for([@sportif, @reservation]) do |f| %>

    <div class="form-inputs">
      <%= f.input :total_price %>
    </div>

    <div class="form-inputs">
      <%= f.input :date_begin, as: :string, required: false, input_html: {class: "datepicker"} %>

      <div class="form-inputs">
        <%= f.input :date_end, as: :string, required: false, input_html: {class: "datepicker"}  %>
        <div class="choice-btn">
          <div class="form-actions">
            <%= f.button :submit, class: "btn btn-flat" %>
          </div>
          <% end %>
          <%= link_to 'Back', reservations_path, class: "btn btn-gradient" %>
        </div>
      </div>
    </div>
  </div>


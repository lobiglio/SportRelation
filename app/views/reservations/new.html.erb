<div class="container">

  <%= simple_form_for([@sportif, @reservation]) do |f| %>

    <div class="form-inputs">
      <%= f.input :total_price %>
    </div>

    <div class="form-inputs">
      <%= f.input :date_begin, as: :date, html5: true %>

    <div class="form-inputs">
      <%= f.input :date_end, as: :date, html5: true %>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back', reservations_path, class: "btn btn-ghost" %>
</div>


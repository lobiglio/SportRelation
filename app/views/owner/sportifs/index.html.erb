<div class="container min-vh-100">
  <h1>My Sportmen</h1>

  <% @sportifs.each do |sportif| %>
    <div class="card-product">
      <img src="<%= cl_image_path sportif.photo, height: 300, width: 400, crop: :fill %>"/>
        <div class="card-content d-flex justify-content-between align-items-center w-100">
          <div class="card-product-infos-name">
            <h2><%= sportif.name %></h2>
            <p class="mb-2 resa-style" ><%= sportif.description %></p>
            <p><%= pluralize sportif.reservations.size, "rÃ©servation" %> :</p>
            <% if sportif.reservations.size > 0 %>
              <p> Status : <%= sportif.reservations.first.status %> - Reserved by : <%= sportif.reservations.first.user.name %></p>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
</div>



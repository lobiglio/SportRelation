<div class = "form min-vh-100">

  <div class = "col-sm-6" id="formulaire">
    <h1>Create your sportif</h1>

    <%= simple_form_for(@sportif) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :offers %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="choice-btn">
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-flat" %>
      </div>

      <%= link_to 'Back', sportifs_path, class: "btn btn-gradient" %>
    </div>

    <% end %>
  </div>
</div>

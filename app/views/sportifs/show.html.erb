<div class="container" >
  <h1><%= @sportif.name %></h1>
  <p id = "sportif-address"><%= @sportif.address %></p>
  <div class="row border justify-content-around">
    <div class="col-8" id = "img-sponsor" style="background-image: url('<%= cl_image_path @sportif.photo %>')">
    </div>

    <div class = "col-4 text-center" >
      <h2 id = "sportif-description"><%= @sportif.description %></h2>
      <div class="card-body">
      <h3 id = "sportif-offers"><%= @sportif.offers %></h3>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <%= link_to "Rejoins l'aventure", sportif_reservations_path(@sportif), method: :post, class: "btn btn-flat" %>
      </div>
    </div>

  </div>
</div>














